 <div class="user_post_wrapper_bg">
        <section>
            <div class="new_user_post_view_all_page_section_bg">
                <div class="container">
                    <div class="new_user_post_view_all_page_bg">
                        <div class="new_user_post_view_all_page_user_details_top_bg">
                            <div class="new_user_post_view_all_page_user_details_top_image_bg_user_details_bg">
                                <div class="new_user_post_view_all_page_user_details_top_image_bg">
                                   {% if posts_result.0.user_image !='' %}
                                    <img src="{{GLOBAL_DIR_PATH}}uploads/user_image/{{posts_result.0.user_image}}" alt="posts_result.0.create_by" class="new_user_post_view_all_page_user_details_top_image">
                                    {% else %}
                                    <div class="new_user_post_view_all_page_user_details_top_user_name_bg ">
                                        <div class="new_user_post_view_all_page_user_details_top_user_name_letters ">
                                            <span class="new_user_post_view_all_page_user_details_top_user_name_initial_letters ">{{posts_result.0.firstname}}{{posts_result.0.lastname}}</span>
                                        </div>
                                    </div>
                                    {% endif %}
                                    
                                </div>
                                <div class="user_post_edit_profile_link_bg">
                                    <a href="{{GLOBAL_DIR_PATH}}accountInfo.php/accountInfo/{{posts_result.0.user_id}}/get" class="user_post_edit_profile_link">edit profile</a>
                                </div>
                                <ul class="new_user_post_view_all_page_user_details_top_details_bg">
                                    <li >
                                        <i class="fas fa-user"></i>
                                        <span >{{posts_result.0.create_by}}</span>
                                        <span >({{posts_result.0.counts}} posts)</span>
                                    </li>
                                    <li >Member Since {{posts_result.0.user_created_at}}</li>
                                    <li ><i class="far fa-envelope"></i><a href="mailto:{{posts_result.0.email}}" >{{posts_result.0.email}}</a></li>
                                    <li ><i class="fas fa-mobile-alt"></i>{{posts_result.0.phone}}</li>
                                </ul>
                            </div>    
                            <div class="new_user_post_view_all_page_user_details_top_my_search_box_bg">
                                <form  id="user-posts-search-form"  class="user_post_page_form_bg" method="POST">
                                    <input type="hidden" value="{{posts_result.0.user_id}}" id="user-id">
                                    <input type="text" class="new_user_post_input_type_text" placeholder="Search A Keyword" id="user-posts-search-value">
                                    <button type="button" class="new_user_post_input_type_submit" id="btn-users-post-search"><i class="fas fa-search"></i></button>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                                {% if search_contain !='' %}
                                <div class="search_results_for_bg">
                                    <div class="search_results_for">
                                        <span class="search_results_for_inner_left">Search 
                                        Results For:</span>
                                        <span class="search_results_for_inner_right">{{search_contain}}</span>
                                    </div>
                                </div>
                                    {% endif %}
                                {% if posts_result.0.counts != 0 %}
                                <div class="if_search_results_found_bg">
                                    <!--left-side-box-->
                                    {% set catname = category_id|replace({' ': '-'}) %}
                                    {% for posts in posts_result %}
                                     {% set forurl = posts.url_name %}
                                    <div class="new_user_post_view_all_page_left_side_box">
                                        <div class="new_user_post_view_all_page_left_side_box_image_bg">                               
                                            <img src="{{ GLOBAL_DIR_PATH }}uploads/post_image/{{ posts.post_image.0 }}" alt="{{ posts.post_name }}" class="new_user_post_view_all_page_left_side_box_image">
                                            <a href="{{ GLOBAL_DIR_PATH }}services.php/{{category_id}}/{{posts.subcategory_name}}/{{ forurl }}" class="new_user_post_view_all_page_left_side_box_image_link_bg">
                                                <div class="new_user_post_view_all_page_left_side_box_image_overlay_bg">                                        
                                                    view post                                              
                                                </div>   
                                            </a>                                 
                                        </div>
                                        <div class="new_user_post_view_all_page_left_side_box_post_details_bg">
                                            <div class="new_user_post_view_all_page_left_side_box_post_details">
                                                <div class="new_user_post_view_all_page_left_side_box_post_details_heading_bg_and_price_bg">
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_heading_bg">
                                                        <h3 class="new_user_post_view_all_page_left_side_box_post_details_heading">
                                                            <a href="#" class="new_user_post_view_all_page_left_side_box_post_details_heading_link_bg">{{ posts.post_name }}</a>
                                                        </h3>                                    
                                                    </div>
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_price_bg">
                                                        <div class="new_user_post_view_all_page_left_side_box_post_details_price">
                                                            {% if posts.price !='' %}
                                                            <i class="fas fa-dollar-sign"></i>{{posts.price}}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="new_user_post_view_all_page_left_side_box_post_details_category_bg_sub_category_bg">
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_category_bg">{{posts.category_name}}</div>
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_sub_category_bg">{{posts.subcategory_name}}</div>
                                                </div>
                                                <div class="new_user_post_view_all_page_left_side_box_post_details_description_bg">
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_description">
                                                        {{posts.description}}
                                                    </div>  
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_read_more_link_bg">
                                                        <a href="{{ GLOBAL_DIR_PATH }}services.php/{{category_id}}/{{posts.subcategory_name}}/{{ forurl }}" class="new_user_post_view_all_page_left_side_box_post_details_read_more_link">view details</a>
                                                    </div>  
                                                </div>
                                            </div>        
                                            <div class="new_user_post_view_all_page_left_side_box_post_details_post_date_read_more_link_bg">
                                                <div class="new_user_post_view_all_page_left_side_box_post_details_post_date_bg">
                                                    <i class="far fa-clock"></i>
                                                    {{posts.created_at}}
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    <!--END left-side-box-->
                                    <!-- <div class="new_user_post_view_all_page_pagination_bg">
                                        <ul class="new_user_post_view_all_page_pagination">
                                            <li class="active"><a href="#">1</a></li>
                                            <li><a href="#">2</a></li>
                                            <li><a href="#">3</a></li>
                                            <li><a href="#">4</a></li>
                                            <li><a href="#">5</a></li>
                                        </ul>
                                    </div> -->
                                    <div class="pagination-cus">
                                {% set page_pagination = pagination %}
                                {% if total_pages is defined and total_pages > 0 %}
                                {% if(pagination == 1) or (pagination < 1)%}
                                {% set left_arrow_style = "disableArrow" %}
                                {% set left_arrow_anchor_style = "disabledAnch" %}
                                {% set page_pagination = 1 %}
                                {% endif %}
                                {% if(pagination >= total_pages) %} 
                                {% set right_arrow_style = "disableArrow" %}
                                {% set right_arrow_anchor_style = "disabledAnch" %}
                                {% set page_pagination = total_pages %}
                                {% endif %}
                                <ul class="pager">
                                {% if search_contain == '' %}
                                  <li class="page-item"><a class="page-link {{ left_arrow_anchor_style }}" href="{{GLOBAL_DIR_PATH}}userPostList.php/userPostList/{{ user_id }}/{{page_pagination-1}}/{{ catname }}" class="{{ left_arrow_style }}">Previous</a></li>
                                  <input id="" name="page_pagination" type="text" class="off-page" value=" {{ page_pagination }} of {{ total_pages }} " readonly/>
                                  <li class="page-item"><a class="page-link {{ right_arrow_anchor_style }}" href="{{GLOBAL_DIR_PATH}}userPostList.php/userPostList/{{ user_id }}/{{page_pagination+1}}/{{ catname }}" >Next</a></li>
                                  {% else %}
                                   <li class="page-item"><a class="page-link {{ left_arrow_anchor_style }}" href="{{GLOBAL_DIR_PATH}}userPostList.php/userPostList/{{ user_id }}/{{page_pagination-1}}/{{ catname }}/{{search_contain}}" class="{{ left_arrow_style }}">Previous</a></li>
                                  <input id="" name="page_pagination" type="text" class="off-page" value=" {{ page_pagination }} of {{ total_pages }} " readonly/>
                                  <li class="page-item"><a class="page-link {{ right_arrow_anchor_style }}" href="{{GLOBAL_DIR_PATH}}userPostList.php/userPostList/{{ user_id }}/{{page_pagination+1}}/{{ catname }}/{{search_contain}}" >Next</a></li>
                                  {% endif %}
                                </ul>
                            </div>
                            {% endif %}
                                </div>  
                                {% else %}  
                                <!--END if search results found -->   
                                <div class="if_search_results_not_found_bg">
                                    <div class="no_search_results_bg">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="no_search_results_left_bg">
                                                    <i class="fas fa-search"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="no_search_results_right_bg">
                                                    <span>sorry</span>
                                                    <span>no result </span>
                                                    <span>found </span>
                                                </div>
                                            </div>   
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="search_page_go_home_link_bg">
                                                     {% if(first_name == 'login') %}
                                                    <a href="{{GLOBAL_DIR_PATH}}login.php/login-form" class="search_page_go_home_link"><i class="fas fa-plus"></i>post ad</a>
                                                    {% else %}
                                                    <a href="{{GLOBAL_DIR_PATH}}add-post.php/add-post-form" class="search_page_go_home_link"><i class="fas fa-plus"></i>post ad</a>
                                                     {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                                    <!--END if search results not found-->
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

                            </div>
                        </div>    
                    </div>
                </div>
            </div>
        </section>
    </div>    
    <script src="{{GLOBAL_DIR_PATH}}view_library/js/new-js.js"></script>