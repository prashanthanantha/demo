<div class="user_post_wrapper_bg">
    {% set catname = posts_result.0.category_name|replace({' ': '-'}) %}
    {% set subcat_name = posts_result.0.subcategory_name|replace({' ': '-'}) %}
        <section> 
            <div class="container">
                <div class="bread_crumb_new_read_more_page_bg">
                    <ul class="bread_crumb_new_read_more_page">
                        <li><a href="https://www.manastlouis.com/"><i class="fas fa-home"></i></a></li>
                        <li>{{ posts_result.0.category_name }} &#187; {% if posts_result.0.subcategory_name is defined  %} > {{ posts_result.0.subcategory_name }} {% endif %}</li>
                    </ul>
                </div>    
            </div>
        </section>
        <section>
            <div class="category_sub_category_post_page_bg">
                <div class="container">                    
                    <div class="new_user_post_view_all_page_bg">                        
                        <div class="row">
                            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                                <div class="search_results_for_bg">
                                    <div class="search_results_for">
                                        {% if search_contain !='' %}
                                        <span class="search_results_for_inner_left">Search Results For:</span>
                                        <span class="search_results_for_inner_right">{{search_contain}}</span>
                                        {% endif %}
                                    </div>
                                </div>
                                {% if total_pages != 0 %}
                                <div class="if_search_results_found_bg">
                                    <!--left-side-box-->
                                    {% for posts in posts_result %}
                                        {% set forurl = posts.url_name %}
                                    <div class="new_user_post_view_all_page_left_side_box">
                                        <div class="new_user_post_view_all_page_left_side_box_image_bg category_sub_category_post_page_image_bg">                               
                                            <img src="{{ GLOBAL_DIR_PATH }}uploads/post_image/{{ posts.post_image.0 }}" alt="user post image" class="new_user_post_view_all_page_left_side_box_image">
                                            <a href="{{ GLOBAL_DIR_PATH }}services.php/{{catname}}/{{subcat_name}}/{{forurl}}" class="new_user_post_view_all_page_left_side_box_image_link_bg">
                                                <div class="new_user_post_view_all_page_left_side_box_image_overlay_bg">                                        
                                                        view post                                              
                                                </div>   
                                            </a>                                 
                                        </div>
                                        <div class="new_user_post_view_all_page_left_side_box_post_details_bg">
                                            <div class="new_user_post_view_all_page_left_side_box_post_details">
                                                <div class="new_user_post_view_all_page_left_side_box_post_details_heading_bg_and_price_bg">
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_heading_bg">
                                                        <h3 class="new_user_post_view_all_page_left_side_box_post_details_heading">
                                                            <a href="{{ GLOBAL_DIR_PATH }}services.php/{{catname}}/{{subcat_name}}/{{forurl}}" class="new_user_post_view_all_page_left_side_box_post_details_heading_link_bg">{{ posts.post_name }}</a>
                                                        </h3>                                    
                                                    </div>
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_price_bg">
                                                        <div class="new_user_post_view_all_page_left_side_box_post_details_price">{% if posts.price !='' %}
                                                            <i class="fas fa-dollar-sign"></i>{{ posts.price }}
                                                        {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="new_user_post_view_all_page_left_side_box_post_details_description_bg">
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_description">
                                                        {{ posts.description|raw }}
                                                    </div>  
                                                    <div class="new_user_post_view_all_page_left_side_box_post_details_read_more_link_bg">
                                                        <a href="{{ GLOBAL_DIR_PATH }}services.php/{{catname}}/{{subcat_name}}/{{forurl}}" class="new_user_post_view_all_page_left_side_box_post_details_read_more_link">view details</a>
                                                    </div>  
                                                </div>
                                            </div>        
                                            <div class="new_user_post_view_all_page_left_side_box_post_details_post_date_read_more_link_bg">
                                                <div class="new_user_post_view_all_page_left_side_box_post_details_post_date_bg">
                                                    <i class="far fa-clock"></i>
                                                    February 12, 2019
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    <!--END left-side-box-->
                                    <!-- <div class="new_user_post_view_all_page_pagination_bg">
                                        <ul class="new_user_post_view_all_page_pagination">
                                            <li class="active"><a href="#">1</a></li>
                                            <li><a href="#">2</a></li>
                                            <li><a href="#">3</a></li>
                                            <li><a href="#">4</a></li>
                                            <li><a href="#">5</a></li>
                                        </ul>
                                    </div> -->
                                    <div class="pagination-cus">
                                
          {% set page_pagination = pagination %}

            {% if total_pages is defined and total_pages > 0 %}
            {% if(pagination == 1) or (pagination < 1)%}
                {% set left_arrow_style = "disableArrow" %}
                {% set left_arrow_anchor_style = "disabledAnch" %}
                {% set page_pagination = 1 %}
            {% endif %}
            {% if(pagination >= total_pages) %} 
                {% set right_arrow_style = "disableArrow" %}
                {% set right_arrow_anchor_style = "disabledAnch" %}
                {% set page_pagination = total_pages %}
            {% endif %}     
        <ul class="pager">
        {% if search_contain =='' %}
          <li class="page-item"><a class="page-link {{ left_arrow_anchor_style }}" href="{{ GLOBAL_DIR_PATH }}posts.php/{{catname}}/{{subcat_name}}/{{page_pagination-1}}" >Previous</a></li>
          <input id="" name="page_pagination" type="text" class="off-page" value=" {{ page_pagination }} of {{ total_pages }} " readonly/>
          <li class="page-item"><a class="page-link {{ right_arrow_anchor_style }}" href="{{ GLOBAL_DIR_PATH }}posts.php/{{catname}}/{{subcat_name}}/{{page_pagination+1}}" >Next</a></li>
          {% else %}
          <li class="page-item"><a class="page-link {{ left_arrow_anchor_style }}" href="{{ GLOBAL_DIR_PATH }}posts.php/{{catname}}/{{subcat_name}}/{{search_contain}}/{{page_pagination-1}}" >Previous</a></li>
          <input id="" name="page_pagination" type="text" class="off-page" value=" {{ page_pagination }} of {{ total_pages }} " readonly/>
          <li class="page-item"><a class="page-link {{ right_arrow_anchor_style }}" href="{{ GLOBAL_DIR_PATH }}posts.php/{{catname}}/{{subcat_name}}/{{search_contain}}/{{page_pagination+1}}" >Next</a></li>
          {% endif %}
        </ul>

            </div>
      {% endif %} 
                                </div>    
                                {% else %}<!--END if search results found -->   
                                <div class="if_search_results_not_found_bg">
                                    <div class="no_search_results_bg">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="no_search_results_left_bg">
                                                    <i class="fas fa-search"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="no_search_results_right_bg">
                                                    <span>sorry</span>
                                                    <span>no result </span>
                                                    <span>found </span>
                                                </div>
                                            </div>   
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="search_page_go_home_link_bg">
                                                    {% if(first_name == 'login') %}
                                                    <a href="{{GLOBAL_DIR_PATH}}login.php/login-form" class="search_page_go_home_link"><i class="fas fa-plus"></i>post ad</a>
                                                    {% else %}
                                                    <a href="{{GLOBAL_DIR_PATH}}add-post.php/add-post-form" class="search_page_go_home_link"><i class="fas fa-plus"></i>post ad</a>
                                                     {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                                <!--END if search results not found-->
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <div class="new_user_post_view_all_page_user_details_top_bg category_sub_category_post_page_search_box_bg">                               
                                    <div class="new_user_post_view_all_page_user_details_top_my_search_box_bg">
                                        <form class="user_post_page_form_bg" id="subcat-search-posts" method="POST">
                                            <input type="hidden" class="new_user_post_input_type_text" value="{{posts_result.0.category_name|replace({' ':'-'})}}" id="cat-name">
                                            <input type="hidden" class="new_user_post_input_type_text" value="{{posts_result.0.subcategory_name}}" id="sub-cat-name">
                                            <input type="text" class="new_user_post_input_type_text" placeholder="Search A Keyword" id="posts-search-value">
                                            <button type="button" class="new_user_post_input_type_submit" id="btn-post-search"><i class="fas fa-search"></i></button>
                                        </form>
                                    </div>
                                </div>
                                <!--right side ads-->
                                <div class="right_side_new_read_more_page_sponser_ads_bg" >
                                    <div class="right_side_new_read_more_page_share_post_heading_bg">
                                        <h5 class="right_side_new_read_more_page_post_heading"><i class="fas fa-ad"></i>sponsored ads</h5>
                                    </div>
                                    <div class="right_side_new_read_more_page_sponser_ads">
                                        <a href="#">
                                            <img src="https://images-na.ssl-images-amazon.com/images/I/5169XnIsYsL.jpg" class="img-responsive" alt ="sponsored ads">
                                        </a>    
                                    </div>
                                    <div class="right_side_new_read_more_page_sponser_ads">
                                        <a href="#">
                                            <img src="https://images-na.ssl-images-amazon.com/images/I/5169XnIsYsL.jpg" class="img-responsive" alt ="sponsored ads">
                                        </a>    
                                    </div>
                                    <div class="right_side_new_read_more_page_sponser_ads">
                                        <a href="#">
                                            <img src="https://images-na.ssl-images-amazon.com/images/I/5169XnIsYsL.jpg" class="img-responsive" alt ="sponsored ads">
                                        </a>    
                                    </div>
                                </div>
                                <!--END right side ads-->
                            </div>
                        </div>    
                    </div>
                </div>
            </div>
        </section>
    </div>  
    

<script type="text/javascript">
          $("#search-user-posts").click(function(){
            var user_name = $("#user-name").val();
             var search_value = $("#search-value").val();
             var errors = '';
            if($("#search-value").prop('value').trim() == ''){
              $("#search-value").addClass('error-placeholder').attr('placeholder','Please Enter Search value');
              errors +='Please Enter Search Value';
            }

            if(errors !='' ){
              return false;
            }

            $('#search-posts').attr('action', '{{GLOBAL_DIR_PATH}}posts.php/user/all-posts/'+user_name+'/'+search_value+'/1').submit();

          });
      
